extends layout

block title_top
  | New RFQ

block meta_tags
  meta(content='', name='description')
  meta(content='', name='author')

block title
  | Register new RFQ

block hint
  | 

block page_content
  .row
    .col-md-12
        #form_wizard_1
          .portlet-body.form
            form#rfq_pro_form.form-horizontal(action='#')
              .form-wizard
                .form-body
                  ul.nav.nav-pills.nav-justified.steps
                    li
                      a.step(href='/rfq_general_data/ ')
                        span.number
                          | 1
                        span.desc
                          i.fa.fa-check
                          | Regional & General Data
                    li
                      a.step(href='#')
                        span.number(style='background: #35aa47; color: #fff;')
                          | 2
                        span.desc
                          i.fa.fa-check
                          | General Product Data
                    li
                      a.step.active(href='#')
                        span.number
                          | 3
                        span.desc
                          i.fa.fa-check
                          | RFQ Line Items
                  #bar.progress.progress-striped(role='progressbar')
                    .progress-bar.progress-bar-success(style='width: 66%;')
                  .tab-content
                    .alert.alert-danger.display-none
                      button.close(data-dismiss='alert')
                      | You have some form errors. Please check below.
                    .alert.alert-success.display-none
                      button.close(data-dismiss='alert')
                      | Your form validation is successful!
                    #tab1.tab-pane.active
                      .form-group
                        label.control-label.col-md-3
                          | Product Line
                        .col-md-4
                          select#product_lines_id.form-control(name='product_lines_id', onchange="fetch_tendering_teams()")
                            option(value='0')
                              | Select Product Line
                            - each lines in product_lines
                              option(value="#{lines.id}")= lines.name
                          span.help-block
                      .form-group
                        label.control-label.col-md-3
                          | Tendering Team
                        .col-md-4
                          select#tendering_teams_id.form-control(name='tendering_teams_id',onchange="fetch_tendering_teams_members()")
                            option(value='0')
                            option(value='1')
                          span.help-block
                      .form-group
                        label.control-label.col-md-3
                          | Product Line
                        .col-md-4
                          select#tendering_teams_members_id.form-control(name='tendering_teams_members_id')
                            option(value='0')
                            option(value='1')
                          span.help-blocks
                .form-actions.fluid
                  .row
                    .col-md-12
                      .col-md-offset-3.col-md-9
                        a#btn_save_pro_data.btn.blue.button-next(href='javascript:;', onclick="rfq_pro_save(1)")
                          | Save for now
                        &nbsp;&nbsp;&nbsp;
                        a#btn_next_pro_data.btn.green.button-submit(href='javascript:;', onclick="rfq_pro_save(2)")
                          | Save &amp; Next 
                          i.m-icon-swapright.m-icon-white
