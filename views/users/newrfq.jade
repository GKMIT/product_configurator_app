extends layout

block title_top
  | New RFQ

block meta_tags
  meta(content='', name='description')
  meta(content='', name='author')

block title
  | Register new RFQ

block hint
  | 

block page_content
  .row
    .col-md-12
        #form_wizard_1
          .portlet-body.form
            form#rfq_gen_form.form-horizontal(action='#')
              .form-wizard
                .form-body
                  ul.nav.nav-pills.nav-justified.steps
                    li
                      a.step(href='#')
                        span.number(style='background: #35aa47; color: #fff;')
                          | 1
                        span.desc
                          i.fa.fa-check
                          | Regional & General Data
                    li
                      a.step(href='#')
                        span.number
                          | 2
                        span.desc
                          i.fa.fa-check
                          | General Product Data
                    li
                      a.step.active(href='#')
                        span.number
                          | 3
                        span.desc
                          i.fa.fa-check
                          | RFQ Line Items
                  #bar.progress.progress-striped(role='progressbar')
                    .progress-bar.progress-bar-success(style='width: 33%;')
                  .tab-content
                    .alert.alert-danger.display-none
                      button.close(data-dismiss='alert')
                      | You have some form errors. Please check below.
                    .alert.alert-success.display-none
                      button.close(data-dismiss='alert')
                      | Your form validation is successful!
                    #tab1.tab-pane.active
                      h3.block Provide your account details
                      .form-group
                        label.control-label.col-md-3
                          | Sales Hub
                        .col-md-4
                          select#sales_hub_id.form-control(name='sales_hub_id', onchange='fetch_sales_persons()')
                            option(value='0')
                              | Select Sales Hub
                            - each hub in sales_hubs
                              option(value="#{hub.id}")= hub.name
                          span.help-block
                      .form-group
                        label.control-label.col-md-3
                          | Sales Person
                        .col-md-4
                          select#sales_person_id.form-control(name='sales_person_id')
                            option(value='0')
                          span.help-block
                      .form-group
                        label.control-label.col-md-3
                          | Customer Country
                        .col-md-4
                          select#customer_country.form-control(name='customer_country')
                            option(value='0')
                              | Select Customer Country
                            - each cust_cont in countries
                              option(value="#{cust_cont.id}")= cust_cont.name
                          span.help-block
                      .form-group
                        label.control-label.col-md-3
                          | Installation Country
                        .col-md-4
                          select#installation_country.form-control(name='installation_country', onchange='fetch_sales_agents()')
                            option(value='0')
                              | Select Installation Country
                            - each inst_cont in countries
                              option(value="#{inst_cont.id}")= inst_cont.name
                          span.help-block
                      .form-group
                        label.control-label.col-md-3
                          | Customer
                        .col-md-4
                          select#customer.form-control(name='customer')
                            option(value='0')
                              | Select Customer
                            - each customer in customers
                              option(value="#{customer.id}")= customer.name
                          span.help-block
                      .form-group
                        label.control-label.col-md-3
                          | Type of quote
                        .col-md-4
                          select#quote_type.form-control(name='quote_type')
                           option(value='0')
                            | Select Quote
                           - each quote in type_of_quote
                              option(value="#{quote.id}")= quote.description
                          span.help-block
                      .form-group
                        label.control-label.col-md-3
                          | Project
                        .col-md-4
                          input#project.form-control(type='text', placeholder='Project Name', name='project')
                          span.help-block
                      .form-group
                        label.control-label.col-md-3
                          | Date RFQ
                        .col-md-4
                          input.form-control.form-control-inline.input-medium.date-picker(size='16', type='text', value='',name="rfq_date",id:"rfq_date")
                          span.help-block
                      .form-group
                        label.control-label.col-md-3
                          | Sales Segment
                        .col-md-4
                          select#sales_segment.form-control(name='sales_segment')
                            option(value='0')
                              | Select Sales Segment
                            - each segment in sales_segments
                              option(value="#{segment.id}")= segment.name
                          span.help-block
                      .form-group
                        label.control-label.col-md-3
                          | Sales Agent
                        .col-md-4
                          select#sales_agent.form-control(name='sales_agent')
                            option(value='0')
                          span.help-block
                      .form-group
                        label.control-label.col-md-3
                          | Requested Quotation Date
                        .col-md-4
                          input.form-control.form-control-inline.input-medium.date-picker(size='16', type='text', value='', name="quotation_date",id:"quotation_date")
                          span.help-block
                      .form-group
                        label.control-label.col-md-3
                          | Probability
                        .col-md-4
                          select#probability.form-control(name='probability')
                            option(value='0') Select Probability
                            option(value='20') 20%
                            option(value='40') 40%
                            option(value='60') 60%
                            option(value='80') 80%
                            option(value='100') 100%
                          span.help-block
                .form-actions.fluid
                  .row
                    .col-md-12
                      .col-md-offset-3.col-md-9
                        a.btn.blue.button-next(href='javascript:;', onclick="rfq_gen_save()")
                          | Save for now
                        &nbsp;&nbsp;&nbsp;
                        a.btn.green.button-submit(href='javascript:;', onclick="rfq_gen_next()")
                          | Save &amp; Next 
                          i.m-icon-swapright.m-icon-white
