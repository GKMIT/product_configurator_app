form#rfq_line_edit_form.form-horizontal(action='#')
  .row
    .col-md-12
      table.table.table-hover.table-striped.table-bordered
        thead
          tr
            th #
            th Product Design Id
            th Plant Name
            th Material Code
            th Design Version
            th Design Variant
            th Accessories
            - each prop in props
              th= prop.property_name
        tbody
          -each design in product_designs
            tr
              td(style=(design.default==1)?'background:#FFFFAE !important':'')
                input(type='radio', name="product_design", value="#{design.id}")
              td(style=(design.default==1)?'background:#FFFFAE !important':'')= design.id
              td(style=(design.default==1)?'background:#FFFFAE !important':'')= design.plant_name
              td(style=(design.default==1)?'background:#FFFFAE !important':'')= design.material_code
              td(style=(design.default==1)?'background:#FFFFAE !important':'')= design.design_version
              td(style=(design.default==1)?'background:#FFFFAE !important':'')= design.design_variant
              td(style=(design.default==1)?'background:#FFFFAE !important':'')= design.accessories
              - var count = 0
              - each prop in props
                td(style=(design.default==1)?'background:#FFFFAE !important':'')= design.range_properties[count].spec_value + ' (+'+design.range_properties[count].plus_tolerance+', -'+ design.range_properties[count].minus_tolerance +')'
                - count = count + 1